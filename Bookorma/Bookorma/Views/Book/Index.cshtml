@{
}


@model List<Bookorma.Models.Book>

<h2>All Books</h2>

<a href="/Book/Create">Add New Book</a>

<table border="1" cellpadding="10">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Author</th>
        <th>Actions</th>
    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.Author</td>
            <td>
                <a href="/Book/Edit/@book.Id">Edit</a> |
                <a href="/Book/Delete/@book.Id">Delete</a>
            </td>
        </tr>
    }
</table>
