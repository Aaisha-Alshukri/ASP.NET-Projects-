@{
}


@model ListApplication.Models.ListApp

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Deadline:</strong> @Model.DeadLine <br />
    <strong>Priority:</strong> @Model.Priority <br />
    <strong>Finished:</strong> @(Model.IsFinished ? "Yes" : "No") <br />
    <strong>Category:</strong> @Model.Category?.CategoryName
</div>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.ListAppId" />
    <button type="submit">Yes, Delete</button>
    <a href="/ListApp">Cancel</a>
</form>
